{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api-recipes",
      "urls": [
        "http://localhost:8080/api/recipes/**",
        "http://localhost:8080/api/recipe/**"
      ],
      "cacheConfig": {
        "maxSize": 100,
        "maxAge": "1d",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "api-user",
      "urls": [
        "http://localhost:8080/api/user/**",
        "http://localhost:8080/api/diet/**"
      ],
      "cacheConfig": {
        "maxSize": 50,
        "maxAge": "6h",
        "timeout": "5s",
        "strategy": "freshness"
      }
    },
    {
      "name": "api-fallback",
      "urls": [
        "http://localhost:8080/api/**"
      ],
      "cacheConfig": {
        "maxSize": 50,
        "maxAge": "1h",
        "timeout": "5s",
        "strategy": "performance"
      }
    }
  ]
}
